<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include("./partials/header") %>
    <title>Blogo</title>
  </head>
  <body class="bg-light">
    <%- include("./partials/navbar", {user}) %> 
    <div class="container">
      <% if (blogs.length) { %>
  <div class="row mt-4">
    <% blogs.forEach(blog => { %>
      <div class="col-lg-4 col-md-6 col-12 d-flex justify-content-center mb-4">
        <div class="card" style="width: 18rem;">
       
          <% if (blog.coverImage) { %>
            <img src="<%= blog.coverImage %>" class="card-img-top mx-auto" width="16rem" height="200px" alt="<%= blog.title %>">
          <% } else { %>
            <img src="https://plus.unsplash.com/premium_photo-1683309567673-1a16c6364057?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" class="card-img-top" width="16rem" height="200px" alt="Default Image">
          <% } %>

         
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <p class="card-text"><%= blog.body.substring(0, 100) %> <% if (blog.body.length > 100) { %>
             ...
            <% } %></p>
            <a href="/blog/readblog/<%= blog._id %>" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <div class="alert alert-warning m-4 text-center" role="alert">
    Add Blogs to see
  </div>
<% } %> <%-include("./partials/scripts") %>
  </body>
</html>
